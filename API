openapi: 3.0.3
info:
  title: Intern Management System API
  description: API specification for managing internships, users, training programs, and performance tracking.
  version: 1.0.0
servers:
  - url: https://api.internms.example.com/v1

paths:
  /auth/login:
    post:
      summary: User login
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                email:
                  type: string
                password:
                  type: string
      responses:
        '200':
          description: Successful login, returns JWT token

  /interns:
    get:
      summary: Get all interns
      responses:
        '200':
          description: A list of interns
    post:
      summary: Create a new intern
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/Intern'
      responses:
        '201':
          description: Intern created

  /interns/{id}:
    get:
      summary: Get intern by ID
      parameters:
        - in: path
          name: id
          schema:
            type: integer
          required: true
      responses:
        '200':
          description: Intern details
    put:
      summary: Update intern info
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/Intern'
      responses:
        '200':
          description: Intern updated

  /performance:
    post:
      summary: Submit a performance record
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/PerformanceRecord'
      responses:
        '201':
          description: Performance recorded

  /interviews/schedule:
    post:
      summary: Schedule an interview
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/InterviewSchedule'
      responses:
        '201':
          description: Interview scheduled

  /dashboard/{userId}:
    get:
      summary: Get user dashboard data
      parameters:
        - in: path
          name: userId
          required: true
          schema:
            type: string
      responses:
        '200':
          description: Dashboard data for user

components:
  schemas:
    Intern:
      type: object
      properties:
        id:
          type: integer
        name:
          type: string
        email:
          type: string
        education:
          type: string
    PerformanceRecord:
      type: object
      properties:
        internId:
          type: integer
        mentorId:
          type: integer
        rating:
          type: integer
        comments:
          type: string
    InterviewSchedule:
      type: object
      properties:
        internId:
          type: integer
        coordinatorId:
          type: integer
        date:
          type: string
          format: date
        time:
          type: string
          format: time

